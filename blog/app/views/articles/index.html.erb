<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path %>
<br>
<br>
<%= link_to 'Sort', p_articles_path %>
<br>
<br>
<table>
  <tr>
		<th>---Index---</th>
    <th>---Title---</th>
    <th>---Text---</th>
		<th>---Creation Time---</th>
		<th>---Views---</th>
		<th>---Likes---</th>
		<th>---Dis Likes---</th>
		<th>---Show---</th>
		<th>---Edit---</th>
		<th>---Button---</th>
		<th>---Destroy---</th>
    <th colspan="3"></th>
  </tr>
<%i=1%>
  <% @articles.each do |article| %>
    <tr align='center'>
			<td><%=i%></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
			<td><%= article.created_at %></td>
			<td><%= article.views %></td>
			<td><%= article.likes %></td>
			<td><%= article.dislikes %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Button', resetlike_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
		<% i=i+1 %>
  <% end %>
</table>
